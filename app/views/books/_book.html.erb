<%# turbo_stream_from tells Hotwire to use websocket for updates of a frame
identified with :book_id %>
<%= turbo_stream_from "book_#{book.id}".to_sym %>

<%# turbo_frame_tag identifies a frame, which can be replaced with a partial on
update %>
<%= turbo_frame_tag "book_#{book.id}" do %>
  <div style="background: lightblue; padding: 10px; width: 400px;">
    <h2><%= book.title %></h2>
    <p><%= book.description %></p>
    <br>
    <%=
      button_to "Like (#{book.likes})",
      book_path(book, book: { likes: (book.likes + 1) }),
      method: :put
    %>
  </div>
  <br>
<% end %>
